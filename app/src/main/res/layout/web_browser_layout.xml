<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="LabelFor, TextFields, ContentDescription">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/web_progress"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:visibility="gone"
            />

        <FrameLayout
            android:layout_marginTop="52dp"
            android:id="@+id/web_view_container2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>



    <EditText
        android:id="@+id/web_url_et"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingStart="16dp"
        android:paddingEnd="150dp"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:imeActionLabel="Go"/>

    <ImageButton
        android:id="@+id/web_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_close_black_24dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:id="@+id/web_forward"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:layout_toStartOf="@id/web_close"/>

    <ImageButton
        android:id="@+id/web_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/web_forward"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_back_black_24dp"/>

</RelativeLayout>